<MudDialog>
	<TitleContent>
		<MudText Typo="Typo.h6">
			@Title
		</MudText>
	</TitleContent>
	<DialogContent>
		<MudText>
			@Text
		</MudText>
	</DialogContent>

	<DialogActions>
		<MudButton OnClick="Cancel">Cancel</MudButton>
		<MudButton Color="@ButtonColor" OnClick="Submit">@ButtonText</MudButton>
	</DialogActions>
</MudDialog>


@code
{
	[CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
	[Parameter] public string Title { get; set; } = "Confirm";
	[Parameter] public string Text { get; set; } = "Are you sure you wish to do this?";
	[Parameter] public string ButtonText { get; set; } = "Yes";
	[Parameter] public MudBlazor.Color ButtonColor { get; set; } = Color.Primary;

	private void Submit()
	{
		MudDialog.Close(DialogResult.Ok("Confirmed"));
	}

	private void Cancel() => MudDialog.Cancel();
}
